                "name": "module-top-bar",
                "params": {}
              },
              "title": "none",
              "actions": [
                {
                  "type": "actions",
                  "label": "Cancelar",
                  "style": "basic",
                  "icon": "arrow left icon",
                  "actions": [
                    {
                      "scope": "service",
                      "name": "doCloseSlider",
                      "params": {
                        "slider": "usuarioadd"
                      }
                    }
                  ]
                },
                {
                  "type": "actions",
                  "label": "Guardar Datos",
                  "urlMap": "var(local:urlMaps.LIST)",
