{
  "accessControl": true,
  "title": "Categorias",
  "navigation": {
    "user": {
      "label": "var(session:user_login)",
      "url": "http://localhost/profile",
      "avatar": "fun(getSession:user_avatar)"
    },
    "items": [
      {
        "label": "Paquetes",
        "url": "http://localhost/paquetes/",
        "icon": "gifts icon"
      },
      {
        "label": "Categorias",
        "url": "http://localhost/categorias/",
        "icon": "sitemap icon"
      },
      {
        "label": "Destinos",
        "url": "http://localhost/destinos/",
        "icon": "map icon"
      },
      {
        "label": "Servicios",
        "url": "http://localhost/servicios/",
        "icon": "tasks icon"
      },
      {
        "label": "Temporadas",
        "url": "http://localhost/temporadas/",
        "icon": "cloud sun icon"
      }
    ]
  },
  "application": {
    "type": "dataobjectscrud",
    "serviceActions": {
      "default": "list",
      "paramNum": 5
    },
    "dataSources": {
      "objects": {
        "adapter": "objects",
        "options": {
          "model": "taxonomy",
          "hardfilters":{
            "parent":["taxonomy_categorias"]
          },
          "toSaveDefaultValues":{
            "parent":"taxonomy_categorias"
          },
          "notRenderableFields":[
            "parent",
            "fechavig_desde",
            "fechavig_hasta",
            "imagenes",
            "icon"
          ]
        }
      },
      "fgroups": {
        "adapter": "table",
        "options": {
          "table": "fields_groups"
        }
      }
    },
    "urlMaps": {
      "LIST": "{var(global:urlbase)}categorias/list",
      "ADD": "{var(global:urlbase)}categorias/add",
      "EDIT": "{var(global:urlbase)}categorias/edit/%(data:_id)%",
      "DELETE": "{var(global:urlbase)}categorias/delete/%(data:_id)%",
      "IMAGE": "{var(global:urlbase)}image/sq60/%(data:imagen)%.jpg"
    },
    "topBar": {
      "list": {
        "title": {
          "type": "text",
          "text": "Categorias - LIST"
        },
        "actions": [
          {
            "type": "link",
            "label": "nuevo",
            "urlMap": "var(local:application.urlMaps.ADD)",
            "style": "green",
            "icon": "plus icon"
          }
        ]
      },
      "edit": {
        "title": {
          "type": "text",
          "text": "Categorias - EDIT"
        },
        "actions": [
          {
            "type": "link",
            "label": "cancelar",
            "urlMap": "var(local:application.urlMaps.LIST)",
            "style": "basic",
            "icon": "angle left icon"
          },
          {
            "type": "actions",
            "label": "guardar",
            "actions": [
              {
                "scope": "_service",
                "name": "doSaveEditorData",
                "params": {
                  "editorReferenceName": "editor"
                }
              }
            ],
            "style": "green",
            "icon": "save icon"
          }
        ]
      },
      "add": {
        "title": {
          "type": "text",
          "text": "Categorias - ADD"
        },
        "actions": [
          {
            "type": "link",
            "label": "cancelar",
            "urlMap": "var(local:application.urlMaps.LIST)",
            "style": "basic",
            "icon": "angle left icon"
          },
          {
            "type": "actions",
            "label": "agregar",
            "actions": [
              {
                "scope": "_service",
                "name": "doSaveEditorData",
                "params": {
                  "editorReferenceName": "editor"
                }
              }
            ],
            "style": "green",
            "icon": "save icon"
          }
        ]
      }
    },
    "editor": {
      "type": "form",
      "async": false,
      "objectsDataSource": "objects",
      "fgroupsDataSource": "fgroups",
      "objectToSaveIdParamNum": 6
    },
    "selector": {
      "type": "tablelist",
      "async": false,
      "dataSource": "objects",
      "links": [],
      "actions": [
        {
          "type": "link",
          "label": "editar",
          "style": "edit green",
          "urlMap": "var(local:application.urlMaps.EDIT)"
        },
        {
          "type": "actions",
          "label": "borrar",
          "style": "trash alternate red",
          "urlMap": "var(local:application.urlMaps.DELETE)",
          "actions": [
            {
              "scope": "_local",
              "name": "doLocalTest",
              "params": {
                "objId": "%(data:_id)%"
              }
            }
          ]
        }
      ],
      "paginator": {
        "type": "links",
        "actions": [
          {
            "scope": "_local",
            "name": "goToPage",
            "params": {
              "page": "%(data:page)%",
              "rows": "%(data:rows)%"
            }
          }
        ],
        "urlbase": "var(local:application.urlMaps.LIST)"
      }
    }
  }
}