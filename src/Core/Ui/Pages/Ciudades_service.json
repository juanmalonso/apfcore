{
  "accessControl": true,
  "title": "Ciudades",
  "application": {
    "type": "dataobjectscrud",
    "serviceActions": {
      "default": "list",
      "paramNum": 5
    },
    "dataSources": {
      "objects": {
        "adapter": "objects",
        "options": {
          "model": "ciudades",
          "toSaveDefaultValues":{
            "pais":"{var(url:pais)}"
          },
          "hardfilters":{
            "pais":["{var(url:pais)}"]
          },
          "notRenderableFields":[
            "parent",
            "fechavig_desde",
            "fechavig_hasta",
            "imagenes",
            "icon"
          ]
        }
      },
      "fgroups": {
        "adapter": "table",
        "options": {
          "table": "fields_groups"
        }
      }
    },
    "urlMaps": {
      "LIST": "{var(global:urlbase)}ciudades/list/pais:{var(url:pais)}/",
      "ADD": "{var(global:urlbase)}ciudades/add/pais:{var(url:pais)}",
      "EDIT": "{var(global:urlbase)}ciudades/edit/%(data:_id)%/pais:{var(url:pais)}/",
      "IMPORT": "{var(global:urlbase)}ciudades/import/pais:{var(url:pais)}/",
      "DELETE": "{var(global:urlbase)}ciudades/delete/%(data:_id)%",
      "IMAGE": "{var(global:urlbase)}image/sq60/%(data:imagen.id)%.jpg"
    },
    "topBar": {
      "list": {
        "title": {
          "type": "text",
          "text": "Ciudades - LIST"
        },
        "actions": [
          {
            "type": "link",
            "label": "nuevo",
            "urlMap": "var(local:application.urlMaps.ADD)",
            "style": "green",
            "icon": "plus icon"
          },
          {
            "type": "actions",
            "label": "importar",
            "actions": [
              {
                "scope": "importer",
                "name": "doOpenImporterSidebar",
                "params": {}
              }
            ],
            "style": "blue",
            "icon": "upload icon"
          }
        ]
      },
      "edit": {
        "title": {
          "type": "text",
          "text": "Ciudades - EDIT"
        },
        "actions": [
          {
            "type": "link",
            "label": "cancelar",
            "urlMap": "var(local:application.urlMaps.LIST)",
            "style": "basic",
            "icon": "angle left icon"
          },
          {
            "type": "actions",
            "label": "guardar",
            "actions": [
              {
                "scope": "_service",
                "name": "doSaveEditorData",
                "params": {
                  "editorReferenceName": "editor"
                }
              }
            ],
            "style": "green",
            "icon": "save icon"
          }
        ]
      },
      "add": {
        "title": {
          "type": "text",
          "text": "Ciudades - ADD"
        },
        "actions": [
          {
            "type": "link",
            "label": "cancelar",
            "urlMap": "var(local:application.urlMaps.LIST)",
            "style": "basic",
            "icon": "angle left icon"
          },
          {
            "type": "actions",
            "label": "agregar",
            "actions": [
              {
                "scope": "_service",
                "name": "doSaveEditorData",
                "params": {
                  "editorReferenceName": "editor"
                }
              }
            ],
            "style": "green",
            "icon": "save icon"
          }
        ]
      }
    },
    "importer":{
      "type": "upload",
      "dataSource": "objects"
    },
    "editor": {
      "type": "form",
      "async": false,
      "objectsDataSource": "objects",
      "fgroupsDataSource": "fgroups",
      "objectToSaveIdParamNum": 6
    },
    "selector": {
      "type": "tablelist",
      "async": false,
      "dataSource": "objects",
      "links": [
      ],
      "actions": [
        {
          "type": "link",
          "label": "editar",
          "style": "edit green",
          "urlMap": "var(local:application.urlMaps.EDIT)"
        },
        {
          "type": "actions",
          "label": "borrar",
          "style": "trash alternate red",
          "urlMap": "var(local:application.urlMaps.DELETE)",
          "actions": [
            {
              "scope": "_local",
              "name": "doLocalTest",
              "params": {
                "objId": "%(data:_id)%"
              }
            }
          ]
        }
      ],
      "paginator": {
        "type": "links",
        "actions": [
          {
            "scope": "_local",
            "name": "goToPage",
            "params": {
              "page": "%(data:page)%",
              "rows": "%(data:rows)%"
            }
          }
        ],
        "urlbase": "var(local:application.urlMaps.LIST)"
      }
    }
  }
}