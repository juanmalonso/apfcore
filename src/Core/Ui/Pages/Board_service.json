{
  "accessControl": true,
  "title": "Tablero Principal",
  "navigation": {
    "user": {
      "label": "var(session:user_login)",
      "url": "http://localhost/profile",
      "avatar": "fun(getSession:user_avatar)"
    },
    "items": [
      {
        "label": "Inicio",
        "url": "http://localhost/board/",
        "icon": "home icon"
      }
    ]
  },
  "application": {
    "type": "dataobjectscrud",
    "serviceActions":{
      "default":"list",
      "paramNum":5
    },
    "dataSources": {
      "objects":{
        "adapter":"objects",
        "options":{
          "model":"affiliates"
        }
      }
    },
    "urlMaps":{
      "LIST":"{var(global:urlbase)}board/list",
      "ADD":"{var(global:urlbase)}board/edit/",
      "EDIT":"{var(global:urlbase)}board/edit/%(data:_id)%",
      "DELETE":"{var(global:urlbase)}board/delete/%(data:_id)%",
      "SUBPAGE":"{var(global:urlbase)}board/subpage/%(data:_id)%/%(component:id)%",
      "DETALLE":"{var(global:urlbase)}board/detalle/%(data:_id)%"
    },
    "topBar":{
      "list":{
        "title":{
          "text":"MAIN BOARD"
        },
        "actions":[
          {
            "type":"link",
            "label":"nuevo",
            "urlMap":"var(local:application.urlMaps.ADD)",
            "icon":"plus green icon"
          },
          {
            "type":"actions",
            "label":"nuevo",
            "actions":[
              {
                "scope":"_local",
                "name":"doLocalTest",
                "params":{
                  "p1":"A",
                  "p2":2
                }
              },
              {
                "scope":"_service",
                "name":"doServiceTest",
                "params":{
                  "p1":"A"
                }
              },
              {
                "scope":"_parent",
                "name":"doParentTest",
                "params":{
                  "p1":"G"
                }
              },
              {
                "scope":"topbar",
                "name":"doRefereceTest",
                "params":{
                  "p1":"G"
                }
              }
            ],
            "icon":"caret left icon"
          }
        ]
      }
    },
    "selector": {
      "type": "tablelist",
      "dataSource":"objects"
    }
  }
}
